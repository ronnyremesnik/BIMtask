<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="300dp"
                                                   tools:ignore="contentDescription">

    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintRight_toRightOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               android:layout_marginStart="10dp"
               android:id="@+id/iv_article_img"
    />

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/tv_title"
              app:layout_constraintTop_toBottomOf="@+id/iv_article_img"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              android:textSize="21sp"
              android:textColor="@color/black"
              tools:text="Article title"
              android:padding="8dp"
    />

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/tv_timeline"
              app:layout_constraintTop_toBottomOf="@+id/tv_title"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              android:textSize="13sp"
              android:textColor="@color/timeline_grey"
              tools:text="14:39:20 21/10/19 "
              android:padding="8dp"
    />

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/tv_description"
              app:layout_constraintTop_toBottomOf="@+id/tv_timeline"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              android:textSize="14sp"
              android:textColor="@color/black"
              tools:text="President Trump will take yet another step towards formally establishing the U.S. Space Force."
              android:maxLines="2"
              android:padding="8dp"
    />

</androidx.constraintlayout.widget.ConstraintLayout>